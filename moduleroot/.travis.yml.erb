---
# This file is managed centrally by modulesync
#   https://github.com/theforeman/foreman-installer-modulesync
<% if @configs['test_all_rvms'] -%>
rvm:
  - 2.1.9
  - 2.3.0
  - 2.4.1
env:
  matrix:
    - PUPPET_VERSION=4.9
<% end -%>
<% if @configs['env'] && @configs['env']['global'] -%>
<% unless @configs['test_all_rvms'] -%>
env:
<% end -%>
  global:
<% @configs['env']['global'].each do |env| -%>
    - <%= env %>
<% end -%>
<% end -%>
matrix:
  fast_finish: true
  include:
<% unless @configs['test_all_rvms'] -%>
    - rvm: 2.1.9
      env: PUPPET_VERSION=4.9
<% end -%>
    - rvm: 2.4.1
      env: PUPPET_VERSION=5.0
<% if @configs['test_all_rvms'] -%>
    - rvm: 2.5.1
      env: PUPPET_VERSION=5.0
<% end -%>
    - rvm: 2.5.1
      env: PUPPET_VERSION=6.0
<% unless @configs['beaker_sets'].empty? -%>
    # Acceptance tests
<% @configs['beaker_sets'].each do |set| -%>
<% @configs['beaker_puppet_collections'].each do |collection| -%>
    - rvm: 2.5.1
      env:
        - BEAKER_PUPPET_COLLECTION=<%= collection %>
        - BEAKER_setfile=<%= set %>{hostname=<%= set %>.example.com}
      script: bundle exec rake beaker
      services: docker
      bundler_args: --without development
      before_install:
        - echo '{"ipv6":true,"fixed-cidr-v6":"2001:db8:1::/64"}' | sudo tee /etc/docker/daemon.json
        - sudo service docker restart

<% end -%>
<% end -%>
<% end -%>
bundler_args: --without system_tests development
sudo: false
<% if @configs['puppetforge_password'] -%>
deploy:
  provider: puppetforge
  user: <%= @configs['puppetforge_username'] %>
  password:
    secure: "<%= @configs['puppetforge_password'] %>"
  on:
    tags: true
    rvm: 2.4.1
    condition: PUPPET_VERSION=5.0
<% end -%>
